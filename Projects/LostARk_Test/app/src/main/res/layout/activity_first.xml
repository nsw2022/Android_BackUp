<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#D5CCA7">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_lowa"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_alignRight="@+id/iv_chat"
        android:layout_below="@+id/iv_logo"
        android:backgroundTint="#507771"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nina" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bmjua"
                android:text="로아와"
                android:textColor="@color/black"
                android:textSize="24sp" />




        </RelativeLayout>




    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/btn_inven"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:backgroundTint="#9DB5D5"
        android:layout_alignLeft="@id/iv_chat"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_fristlayout_inven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fisrt_inven" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/bmjua"
                android:text="로아인벤"
                android:textColor="@color/black"
                android:textSize="24sp" />



        </RelativeLayout>


    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:id="@+id/iv_chat"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#91EFB6"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:layout_below="@id/btn_lowa">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="숙제할래...?"
                android:fontFamily="@font/bmjua"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/iv_crad_view_mokoko"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/love_mokoko" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>